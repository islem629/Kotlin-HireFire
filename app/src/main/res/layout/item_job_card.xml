<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:elevation="12dp"
    android:backgroundTint="#FFFFFFFF"
    app:cardCornerRadius="24dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="476dp"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title header -->
        <TextView
            android:id="@+id/tvJobMatches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Job Matches"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:text="Swipe to find your perfect role"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <!-- Purple inner area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7F5A26BF"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Job title + company -->
            <TextView
                android:id="@+id/tvJobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="Senior Frontend Developer"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HF Company"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Remote"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <!-- Description bullet style -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:text="- Turn ideas into stunning interfaces.\n- Work with React, TypeScript &amp;
 modern UI tools.\n- Deliver fast, elegant web apps."
                android:textColor="@android:color/white"
                android:textSize="13sp" />

            <!-- Small company tag -->
            <TextView
                android:id="@+id/tvCompanyTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#33FFFFFF"
                android:padding="8dp"
                android:text="Company : HF Company"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Bottom text -->
        <TextView
            android:id="@+id/tvSwipeHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="Swipe or use buttons below"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <!-- Accept / Reject buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnReject"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="4dp"
                android:background="@android:color/holo_red_dark"
                android:contentDescription="Reject"
                android:padding="12dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />

            <ImageView
                android:id="@+id/btnAccept"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@android:color/holo_green_dark"
                android:contentDescription="Accept"
                android:padding="12dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_save" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
